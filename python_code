import pdfplumber
import pandas as pd

# Input/output file paths
pdf_path = "your_file.pdf"     # Replace with your PDF filename
output_excel = "output.xlsx"   # Output Excel filename

# Collect all tables from all pages
all_tables = []

with pdfplumber.open(pdf_path) as pdf:
    for page_number, page in enumerate(pdf.pages, start=1):
        print(f"Processing page {page_number}...")
        tables = page.extract_tables()

        for table in tables:
            # Convert raw table to DataFrame
            df = pd.DataFrame(table)
            all_tables.append(df)

# Combine all extracted tables into one DataFrame (optional)
if all_tables:
    combined_df = pd.concat(all_tables, ignore_index=True)
    combined_df.to_excel(output_excel, index=False)
    print(f"✅ Tables extracted and saved to {output_excel}")
else:
    print("⚠️ No tables found in the PDF.")
